<AnchorPane xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ViewLogin.EditPassword">
   <children>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="530.0" layoutX="-1.0" layoutY="-3.0" stroke="#cc0000" strokeType="INSIDE" strokeWidth="10.0" width="830.0" />
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#0039a6" height="500.0" layoutX="14.0" layoutY="12.0" stroke="#cc0000" strokeType="INSIDE" strokeWidth="10.0" width="800.0" />
      <PasswordField fx:id="newPassField" layoutX="75.0" layoutY="276.0" prefHeight="25.0" prefWidth="375.0" promptText="New Password:" />
      <PasswordField fx:id="oldPassField" layoutX="75.0" layoutY="226.0" prefHeight="25.0" prefWidth="375.0" promptText="Old Password:" />
      <PasswordField fx:id="confirmNewPassField" layoutX="75.0" layoutY="325.0" prefHeight="25.0" prefWidth="375.0" promptText="Confirm New Password:" />
      <ImageView fitHeight="320.0" fitWidth="295.0" layoutX="481.0" layoutY="90.0">
         <image>
            <Image url="@../../../Pictures/panther2.png" />
         </image>
      </ImageView>
      <Label layoutX="75.0" layoutY="106.0" prefHeight="60.0" prefWidth="375.0" text="Edit Password" textFill="WHITE">
         <font>
            <Font name="Gill Sans MT" size="45.0" />
         </font>
      </Label>
      <Button fx:id="Accept" layoutX="275.0" layoutY="450.0" mnemonicParsing="false" onAction="#Accept" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: cc0000;" text="Accept" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="Cancel" layoutX="550.0" layoutY="450.0" mnemonicParsing="false" onAction="#Cancel" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: cc0000;" text="Cancel" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
